                    <h2>Hasil pencarian</h2>
                    <br>
                    <p>
                        <img src="<%= movie.poster %>" alt="movie poster">
                    </p>
                    <p>Judul film:
                        <%= movie.title %>
                    </p>
                    <p>Tahun rilis:
                        <%= movie.year %>
                    </p>
                    <p>Durasi:
                        <%= movie.runtime %>
                    </p>
                    <p>Genre:
                        <%= movie.genres %>
                    </p>
                    <p>Aktor:
                        <%= movie.actors %>
                    </p>
                    <p>Sutradata:
                        <%= movie.director %>
                    </p>
                    <p>Penulis naskah:
                        <%= movie.writer %>
                    </p>
                    <p>Penghargaan:
                        <%= movie.awards %>
                    </p>
                    <p>Rating:
                        <%= movie.rating %> | |
                            <% for (let i = 0; i < Math.floor(Number(movie.rating)); i++) { %>
                                <!-- stars simbol -->
                                &#10032;
                                <% } %>
                    </p>
                    <p>Sinopsis:
                        <strong><%= movie.plot %></strong>
                    </p>
                    <p>link:
                        <a href="<%= movie.imdburl %>">IMDB</a>
                    </p>
